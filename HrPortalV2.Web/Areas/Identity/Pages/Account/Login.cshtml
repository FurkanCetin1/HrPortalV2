@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}


<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Giriş yapmak için yerel bir hesap kullanın.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                   
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)

                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Giriş Yap</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Parolanızı mı unuttunuz?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni kullanıcı olarak kayıt ol</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <br />
            <img src="~/images/key.jpg" style="width:100%" />
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
