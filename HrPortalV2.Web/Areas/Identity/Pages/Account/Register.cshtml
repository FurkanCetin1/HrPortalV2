@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt ol";
}



<div class="row">
    <div class="col-md-4" enctype="multipart/form-data">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Yeni bir hesap oluştur.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
              
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role" class="form-control">
                    <option value="Candidate">İş arıyorum</option>
                    <option value="Company">İşverenim</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Photo" class="control-label"></label>
                <input type="file" name="Resim Dosyası"  class="form-control" />
                <span asp-validation-for="Input.Photo" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Kaydol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
