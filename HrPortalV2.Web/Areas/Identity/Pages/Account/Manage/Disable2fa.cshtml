@page
@model Disable2faModel
@{
    ViewData["Title"] = "İki faktörlü kimlik doğrulamayı devre dışı bırak (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

@Html.Partial("_StatusMessage", Model.StatusMessage)
<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>Bu işlem sadece 2FA'yı devre dışı bırakır.</strong>
    </p>
    <p>

        2FA'nın devre dışı bırakılması, kimlik doğrulama uygulamalarında kullanılan tuşları değiştirmez.
        Bir doğrulayıcı uygulamasında kullanılan anahtarı değiştirmek isterseniz<a asp-page="./ResetAuthenticator">kimlik doğrulama anahtarlarınızı sıfırlayın.</a>
    </p>
</div>

<div>
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">
            2FA'yı devre dışı bırak
        </button>
    </form>
</div>
