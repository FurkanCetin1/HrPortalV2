@model IEnumerable<HrPortalV2.Models.Message>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Yeni Mesaj</a>
</p>
<table class="table" id="tblRecords">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IPAddress)
            </th>
            <th class="text-nowrap all">
                Eylemler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-nowrap all">
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.FromName)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.ToName)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.IsRead)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td class="text-nowrap all">
                @Html.DisplayFor(modelItem => item.IPAddress)
            </td>
            <td class="text-nowrap all">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">Detaylar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
