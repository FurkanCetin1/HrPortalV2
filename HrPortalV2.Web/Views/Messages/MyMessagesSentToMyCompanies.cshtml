@model IEnumerable<HrPortalV2.Models.Message>

@{
    ViewData["Title"] = "Gelen Mesajlarım";
}


<link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="//cdn.datatables.net/responsive/2.2.1/css/responsive.dataTables.min.css" rel="stylesheet" />
<table id="tblRecords" class="table">

    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.From)
            </th>
          
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th class="text-nowrap all" data-orderable="false">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Resumes" asp-route-id="@item.From">@Html.DisplayFor(modelItem => item.FromName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="text-nowrap">
                    
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Mesajı Oku</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.1/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tblRecords').DataTable({
                responsive: true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Turkish.json"
                }
            });
        });</script>
}
